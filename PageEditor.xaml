<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Class="ExoCortex.PageEditor"
    Width="Auto" Height="Auto">
    <Grid>
            
    	<RichTextBox HorizontalAlignment="Stretch" x:Name="rtb" VerticalAlignment="Stretch" AcceptsTab="True" SelectionChanged="rtb_SelectionChanged" BorderThickness="0,0,0,0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
    		<FlowDocument>
    			<Paragraph></Paragraph>
    			<Paragraph></Paragraph>
    		</FlowDocument>
    	</RichTextBox>
            
    </Grid>
</UserControl>
